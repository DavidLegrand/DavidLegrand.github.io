<div class="flex flex-col md:grid grid-cols-12">
     {% for item in degrees.items %}
          <div class="flex md:contents transition ease-in-out delay-50 duration-150 xp">
               <div class="col-start-1 col-end-3 flex items-center date transition ease-in-out delay-50 duration-150 outline-none">
                    <p class="h5 border-2 border-solid border-slate-900 rounded-xl p-3 shadow-md w-full text-right ">{{ item.date }}</p>
               </div>
               <div class="col-start-3 col-end-4 mr-10 md:mx-auto relative transition ease-in-out delay-50 duration-150">
                    <div class="h-full w-6 flex items-center justify-center flex-col">
                         <div class="h-3/6 w-1 bg-slate-900 pointer-events-none top-bar"></div>
                         <div class="h-3/6 w-1 bg-slate-900 pointer-events-none bottom-bar"></div>
                    </div>
                    <div class="w-6 h-6 absolute top-1/2 -mt-3 rounded-full bg-slate-900 shadow-md text-center check">
                         <i class="fas fa-check-circle text-white"></i>
                    </div>
               </div>
               <div
                    class=" border-2 border-solid border-slate-900 col-start-4 col-end-13 p-4 shadow-md rounded-xl {{ "
                    mb-4" if loop.first else "
                    my-4" }} mr-auto w-full transition ease-in-out delay-50 duration-150 outline-none desc">
                    <div class="flex justify-between">
                         <h3 class="h4">{{ item.title }}</h2>
                         <p class="font-bold">{{ item.place }}</p>
                    </div>
                    <p>{{ item.description }}</p>
                    <p>{{ item.studies }}</p>
               </div>
          </div>
     {% endfor %}
</div>